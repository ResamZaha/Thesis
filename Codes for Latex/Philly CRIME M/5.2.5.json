[
    {
      "$group": {
        "_id": "$dc_dist",
        "Avg_Point_X": { "$avg": "$point_x" },
        "Avg_Point_Y": { "$avg": "$point_y" },
        "Avg_Latitude": { "$avg": "$lat" },
        "Avg_Longitude": { "$avg": "$lng" }
      }
    },
    {
      "$sort": { "_id": 1 }
    },
    {
      "$project": {
        "_id": 0,
        "dc_dist": "$_id",
        "Avg_Point_X": 1,
        "Avg_Point_Y": 1,
        "Avg_Latitude": 1,
        "Avg_Longitude": 1
      }
    }
]